@model Scandimex.Models.Ciudad
@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.CiudadCodigo)
        <div class="form-group">
            @Html.LabelFor(model => model.CiudadNombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CiudadNombre)
                @Html.ValidationMessageFor(model => model.CiudadNombre)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PaisAbreviacion, "País", new { @class = "control-label col-md-2" })
            <div class="col-md-10">

               @* @Html.DropDownListFor(model => model.PaisAbreviacion, new SelectList(ViewBag.Paises, "PaisAbreviacion", "PaisNombre"), new { disabled = "disabled" })*@
                @Html.DropDownListFor(model => model.PaisAbreviacion, new SelectList(ViewBag.Paises, "PaisAbreviacion", "PaisNombre"))
                @Html.ValidationMessageFor(model => model.PaisAbreviacion)
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
